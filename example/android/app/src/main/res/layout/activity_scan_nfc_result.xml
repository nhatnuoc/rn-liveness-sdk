                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:lineHeight="20dp"
                                        android:textColor="@color/neutral_color_800"
                                        android:textFontWeight="600"
                                        android:textSize="13dp" />

                                </LinearLayout>

                                <View
