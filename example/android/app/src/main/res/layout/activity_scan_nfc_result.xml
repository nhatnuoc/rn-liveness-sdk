                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:lineHeight="24dp"
                            android:text="123456789"
                            android:textColor="@color/neutral_color_800"
                            android:textFontWeight="600"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>

