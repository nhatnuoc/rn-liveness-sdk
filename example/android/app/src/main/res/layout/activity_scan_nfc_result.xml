                            android:lineHeight="28dp"
                            android:textColor="@color/neutral_color_800"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/step_done" />
                    </LinearLayout>

