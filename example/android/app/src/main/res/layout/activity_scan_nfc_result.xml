                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:lineHeight="20dp"
                                        android:textColor="@color/neutral_color_800"
                                        android:textFontWeight="600"
                                        android:textSize="13dp" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/neutral_color_200" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="12dp"
                                    android:paddingBottom="12dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:lineHeight="20dp"
                                        android:text="@string/result_identify_character"
                                        android:textColor="@color/neutral_color_700"
                                        android:textSize="13dp" />

                                    <TextView
                                        android:id="@+id/output_identify_character"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:lineHeight="20dp"
                                        android:textColor="@color/neutral_color_800"
                                        android:textFontWeight="600"
                                        android:textSize="13dp" />

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/neutral_color_200" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="12dp"
                                    android:paddingBottom="12dp">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:lineHeight="20dp"
                                        android:text="@string/result_passive_auth"
                                        android:textColor="@color/neutral_color_700"
                                        android:textSize="13dp" />

                                    <TextView
                                        android:id="@+id/output_passive_auth"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:lineHeight="20dp"
                                        android:textColor="@color/neutral_color_800"
                                        android:textFontWeight="600"
                                        android:textSize="13dp" />

